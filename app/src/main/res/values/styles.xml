<resources>

    <!-- Base application theme. -->
    <!-- replace parent="Theme.AppCompat.Light.DarkActionBar" -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeBac" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:textColorHighlightInverse">@android:color/white</item>
        <item name="android:textColorHintInverse">@android:color/white</item>
    </style>

    <!-- replace parent="AppTheme" -->
    <style name="FullscreenTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppThemeWithBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black_overlay</item>
        <item name="android:textColorHint">@color/black_overlay</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyAppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="PinkButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/pink</item>
        <item name="colorButtonNormal">@color/pink_pressed</item>
    </style>

    <style name="DarkBlueButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/dark_blue_pressed</item>
        <item name="colorButtonNormal">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white_pressed</item>
    </style>

    <style name="BtnPrimary" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccentOverlay</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white_pressed</item>
    </style>

    <style name="BtnRed" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/redGoogleOverlay</item>
        <item name="colorButtonNormal">@color/redGoogle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white_pressed</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ClinicLocatorTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ClinicLocatorTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ClinicLocatorTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
